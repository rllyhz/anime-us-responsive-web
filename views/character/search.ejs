<%- include("../includes/header.ejs") %>

  <div class="row">
    <div class="col-sm-2 col-md-2 col-lg-2 col-xl-2">
      <form action="" id="search-anime">
        <div class="form-group">
          <input id="search" name="search" type="text" placeholder="Search your fav Characters ..."
            class="form-control" />
          <label for="search" hidden>Search Your Character</label>
        </div>
      </form>
    </div>
  </div>

  <div id="result-characters" style="margin-top: 3rem;">
    <div class="row">
      <div class="col-sm-1 col-md-2 col-lg-3 col-xl-4">
        <% if (characters && characters.length> 0) { %>
          <% characters.forEach(character=> { %>
            <div class="character" style="margin: .56rem;">
              <div class="card" style="padding-top: 2%;">
                <div class="card-image">
                  <a href="/characters/show/<%= character.mal_id %>">
                    <img src="<%= character.image_url %>" alt="<%= character.name %>">
                  </a>
                </div>
                <div class="card-title">
                  <a href="/characters/show/<%= character.mal_id %>" style="color: white; text-decoration: underline;">
                    <%= character.name %>
                  </a>
                </div>
              </div>
            </div>
            <% }) %>
              <% } %>
      </div>
    </div>
  </div>


  <div class="row mt-6 search">
    <div class="card">
      <div class="container">
        <div class="wrapper-search">
          <h2>What's your favorite Anime, Manga, Character?</h2>
          <form action="" id="search-here">
            <div class="form-group">
              <input id="search" name="keyword" type="text" placeholder="Search here ..." class="form-control" />
              <label for="search" hidden>Search</label>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include("../includes/footer.ejs") %>