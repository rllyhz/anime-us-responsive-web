<%- include("../includes/header.ejs") %>

  <style>
    .load-more {
      display: grid;
      place-content: center;
      margin: 3rem 0;
    }

    .load-more-btn {
      border: none;
      outline: none;
      background: pink;
      padding: .65rem 1rem;
      border-radius: 6px;
      color: white;
      cursor: pointer;
      transition: filter 200ms ease-in-out;
    }

    .load-more-btn:hover {
      filter: opacity(.8);
    }
  </style>

  <div class="row">
    <div class="col-sm-2 col-md-2 col-lg-2 col-xl-2">
      <form action="" id="search-anime">
        <div class="form-group">
          <input id="search" name="search" type="text" placeholder="Search your fav Anime ..." class="form-control" />
          <label for="search" hidden>Search</label>
        </div>
      </form>
    </div>
  </div>

  <div class="row mt-6">
    <div class="col-sm-1 col-md-2 col-lg-3 co-xl-4">
      <% animeList.forEach(anime=> { %>
        <div class="anime" style="margin: .56rem;">
          <div class="card" style="padding-top: 2%;">
            <div class="card-image">
              <a href="/anime/show/<%= anime.mal_id %>">
                <img src="<%= anime.image_url %>" alt="<%= anime.title %>">
              </a>
            </div>
            <div class="card-title">
              <a href="/anime/show/<%= anime.mal_id %>" style="color: white; text-decoration: underline;">
                <%= anime.title %>
              </a>
            </div>
          </div>
        </div>
        <% }) %>
    </div>
  </div>

  <div class="load-more">
    <button class="load-more-btn">Load more</button>
  </div>

  <%- include("../includes/footer.ejs") %>